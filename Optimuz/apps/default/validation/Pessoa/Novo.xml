<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE settings SYSTEM "http://optimuz.interativadesenvolvimento.com.br/dtd/validation.dtd">
<form method="post" lang="">
	<custom-rules>
		<rule name="phone" regex="/\d{2} \d{4,5}-\d{4}/" errorMessage="O formato do telefone deve ser 00 0000-0000" />
		<rule name="cep" regex="/\d{5}-\d{3}/" errorMessage="O formato do CEP deve ser 00000-000" />
	</custom-rules>

	<input name="pessoa-id">
		<rule name="discard" />
	</input>		
	<input name="nome" label="Nome">
		<rule name="required" />
	</input>
	<input name="cpf" label="CPF">
		<rule name="required" />
		<rule name="cpf" strict="false" />
	</input>
	<input name="email" label="E-mail">
		<rule name="email" />
	</input>
	<input name="telefone" label="Tel. residencial">
		<rule name="phone"/>
	</input>
	<input name="celular" label="Celular">
		<rule name="phone" />
		<rule name="required" />
	</input>
			
	<input name="cep" label="CEP">
		<rule name="cep" />
		<rule name="required" />
	</input>
	<input name="logradouro" label="Logradouro">
		<rule name="discard"/>
		<rule name="required" />
	</input>
	<input name="numero" label="NÃºmero">
		<rule name="number" />
	</input>
	<input name="complemento" label="Complemento">
		<rule name="discard" />
	</input>
	<input name="uf" label="UF">
		<rule name="number" />
		<rule name="required" />
	</input>
	<input name="bairro" label="Bairro">
		<rule name="discard"/>
		<rule name="required" />
	</input>
	<input name="cidade" label="Cidade">
		<rule name="discard"/>
		<rule name="required" />
	</input>
</form>