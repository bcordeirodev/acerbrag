<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE settings SYSTEM "http://optimuz.interativadesenvolvimento.com.br/dtd/validation.dtd">
<form method="post" lang="">
	<custom-rules>
		<rule name="phone" regex="/\d{2} \d{4,5}-\d{4}/" errorMessage="O formato do telefone deve ser 00 0000-0000" />
		<rule name="cep-rule" regex="/\d{5}-\d{3}/" errorMessage="O formato do cep deve ser 00000-000" />
		<rule name="cpf-rule" regex="/\d{3}.\d{3}.\d{3}-\d{2}/" errorMessage="O formato do telefone deve ser 000.000.000-00" />
	</custom-rules>
	<input name="nome" label="Nome">
		<rule name="required" />
	</input>
	<input name="email" label="E-mail">
		<rule name="required" />
		<rule name="email" />
	</input>
	<input name="telefone" label="Telefone">
		<rule name="phone" />
		<rule name="required"/>
	</input>
	<input name="cpf" label="CPF">
		<rule name="cpf-rule"/>
		<rule name="discard"/>
	</input>
	<input name="nivel" label="Nível">
		<rule name="number" />
	</input>
	<input name="perfil-usuario" label="Tipo de usuário">
		<rule name="number" />
	</input>

	<input name="senha" label="Senha">
		<rule name="required" />
		<rule name="password" accept="letters,numbers,symbols" allowSequences="false" sequencesMaxLength="4" />
		<rule name="length" min="8" />
	</input>
	<input name="confirma-senha" label="Confirmar senha">
		<rule name="required" />
		<rule name="comparePasswords" second="senha" />
	</input>
	<input name="permissoes" label="Permissões">
		<rule name="array" errorMessage="Selecione uma ou mais permissões" />
	</input>
	<input name="filial" label="Filiais">
		<rule name="array" errorMessage="Selecione uma ou mais filiais" />
		<rule name="discard" />
	</input>
</form>